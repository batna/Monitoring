{% extends 'BatnaArchiBundle:Contexte:index.html.twig' %}

{% block variables %}

<div class="grid_6">
	<div class="block-border">
		<div class="block-header">
			<h1>{{ 'var.newVar'|trans([], 'BatnaArchiBundle') }}</h1><span></span>
		</div>
		<div class="block-content">
		{% for key, flash in app.session.getFlashes() %}
			<div class="alert {{key }}"><span class="hide">x</span>{{ flash }}</div>
		{% endfor %}
		
			<form action="{{ path('varCon_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
			<div style="margin:10px">
				{{ form_widget(edit_form) }}
			</div>
			<div class="block-actions">
				<ul class="actions-left">
				    <li>
				        <a href="{{ path('ctxt') }}" class="button">{{ 'context.backToTheList'|trans({}, 'BatnaArchiBundle') }}</a>
				    </li>
				</ul>
				<ul class="actions-right">
					<li>
						<input type="submit" class="button" value="{{ 'context.edit'|trans({}, 'BatnaArchiBundle') }}" />
					</li>
				</form>
					<li>
						<form action="{{ path('varCon_delete', { 'id': entity.id }) }}" method="post">
				            {{ form_widget(delete_form) }}
            				<input type="submit" class="button red" value="{{ 'context.delete'|trans({}, 'BatnaArchiBundle') }}" />
        				</form>
        			</li>
				</ul>
			</div>
		</div>
	</div>
</div>

{% endblock %}