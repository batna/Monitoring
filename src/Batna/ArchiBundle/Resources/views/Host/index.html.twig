{% extends 'BatnaArchiBundle::layout.html.twig' %}

{%  block maintitle %}{{ 'host.hostManagement'|trans([], 'BatnaArchiBundle') }}{% endblock %}

{% block corps %}

<div class="container_12">
	<div class="grid_12">
		<div class="block-border">
			<div class="block-header">
				<h1>{{ 'host.hostList'|trans([], 'BatnaArchiBundle') }}</h1><span></span>
			</div>
			<div class="block-content">
			{% if entities is empty %}
			<p>{{ 'host.noHost'|trans([], 'BatnaArchiBundle') }}</p>
			{% else %}
				<table style="margin:10px;">
				    <thead>
				        <tr>
				            <th>{{ 'host.actions'|trans([], 'BatnaArchiBundle') }}</th>
				            <th>{{ 'host.hostname'|trans([], 'BatnaArchiBundle') }}</th>
				            <th>{{ 'host.ip'|trans([], 'BatnaArchiBundle') }}</th>
				            <th>{{ 'host.ram'|trans([], 'BatnaArchiBundle') }}</th>
				            <th>{{ 'host.cpucore'|trans([], 'BatnaArchiBundle') }}</th>
				        </tr>
				    </thead>
				    <tbody>
				    {% for entity in entities %}
				        <tr>
				            <td>
				            	<a href="{{ path('host_show', { 'id': entity.id }) }}"><img src="{{ asset('img/icons/packs/fugue/16x16/magnifier.png') }}" /></a>
				                <a href="{{ path('host_edit', { 'id': entity.id }) }}"><img src="{{ asset('img/icons/packs/fugue/16x16/pencil.png') }}" /></a>
				          	</td>
				            <td>{{ entity.hostname }}</td>
				            <td><center>{{ entity.ip }}</center></td>
				            <td><center>{{ entity.ram }}{% if entity.ram is not empty %} Mo{% endif %}</center></td>
				            <td><center>{{ entity.cpuCore }}</center></td>
				        </tr>
				    {% endfor %}
				    </tbody>
				</table>
				{% endif %}
				<div class="block-actions">
					<ul class="actions-left">
						<li><a href="{{ path('host_new') }}" class="button">{{ 'host.newHost'|trans([], 'BatnaArchiBundle') }}</a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}