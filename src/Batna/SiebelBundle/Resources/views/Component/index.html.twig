{% extends 'BatnaSiebelBundle::layout.html.twig' %}

{%  block maintitle %}{{ 'cmp.cmpManagement'|trans([], 'BatnaSiebelBundle') }}{% endblock %}

{% block corps %}

<div class="container_12">
	<div class="grid_6">
		<div class="block-border">
			<div class="block-header">
				<h1>{{ 'cmp.cmpList'|trans([], 'BatnaSiebelBundle') }}</h1><span></span>
			</div>
			<div class="block-content">
			{% if entities is empty %}
			<p>{{ 'cmp.noCmp'|trans([], 'BatnaSiebelBundle') }}</p>
			{% else %}
				<table style="margin:10px;">
				    <thead>
				        <tr>
				            <th>{{ 'cmp.actions'|trans([], 'BatnaSiebelBundle') }}</th>
				            <th>{{ 'cmp.name'|trans([], 'BatnaSiebelBundle') }}</th>
				            <th>{{ 'cmp.fullname'|trans([], 'BatnaSiebelBundle') }}</th>
				            <th>{{ 'cmp.description'|trans([], 'BatnaSiebelBundle') }}</th>
				            <th>{{ 'cmp.componenttype'|trans([], 'BatnaSiebelBundle') }}</th>
				            <th>{{ 'cmp.servicetype'|trans([], 'BatnaSiebelBundle') }}</th>
				        </tr>
				    </thead>
				    <tbody>
				    {% for entity in entities %}
				        <tr>
				            <td>
				            	<a href="{{ path('cmp_show', { 'id': entity.id }) }}"><img src="{{ asset('img/icons/packs/fugue/16x16/magnifier.png') }}" /></a>
				                <a href="{{ path('cmp_edit', { 'id': entity.id }) }}"><img src="{{ asset('img/icons/packs/fugue/16x16/pencil.png') }}" /></a>
				          	</td>
				            <td>{{ entity.name }}</td>
				            <td>{{ entity.fullName }}</td>
				            <td>{{ entity.description }}</td>
				            <td>{{ entity.componentType }}</td>
				            <td>{{ entity.serviceType }}</td>
				        </tr>
				    {% endfor %}
				    </tbody>
				</table>
				{% endif %}
				<div class="block-actions">
					<ul class="actions-left">
						<li><a href="{{ path('cmp_new') }}" class="button">{{ 'cmp.newCmp'|trans([], 'BatnaSiebelBundle') }}</a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}