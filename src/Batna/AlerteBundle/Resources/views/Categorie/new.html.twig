{% extends 'BatnaAlerteBundle::layout.html.twig' %}

{% block maintitle %}{{ 'cat.mainTitle'|trans({}, 'BatnaAlerteBundle') }}{% endblock %}

{% block corps %}
<div class="container_12">
	<div class="grid_6">
		<form action="{{ path('cat_create') }}" {{ form_enctype(form) }} method="POST" class="cat_new">
			<div class="block-border">
				<div class="block-header">
					<h1>{{ 'cat.newTitle'|trans({}, 'BatnaAlerteBundle') }}</h1><span></span>
				</div>
				<div class="block-content">
					<div style="margin:10px;">
				    {{ form_widget(form) }}
				    </div>
					<div class="block-actions">
						<ul class="actions-left">
							<li><a href="{{ path('cat') }}" class="button">{{ 'cat.backToTheList'|trans({}, 'BatnaAlerteBundle') }}</a></li>
						</ul>
						<ul class="actions-right">
							<li><input class="button" type="submit" value="{{ 'cat.create'|trans([], 'BatnaAlerteBundle') }}" /></li>
						</ul>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
{% endblock %}
